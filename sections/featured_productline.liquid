{{ 'featured_productline.css' | asset_url | stylesheet_tag }}
<link rel="stylesheet" href="{{ 'featured_productline.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'featured_productline.css' | asset_url | stylesheet_tag }}</noscript>

{% unless section.settings.full_width %}
<div class="page-width">
{% endunless %}

  <h2 class="title"> {{section.settings.title}} </h2>
  <div class="productline-slider">
    {% for block in section.blocks %}
      <div class="productline-item {{block.type}}">
        {% if block.type == 'column3' %}
          <div class="image1" style="width: {{block.settings.width1}};">
             <img
                srcset="{%- if block.settings.image1.width >= 275 -%}{{ block.settings.image1 | img_url: '275x' }} 275w,{%- endif -%}
                  {%- if block.settings.image1.width >= 550 -%}{{ block.settings.image1 | img_url: '550x' }} 550w,{%- endif -%}
                  {%- if block.settings.image1.width >= 710 -%}{{ block.settings.image1 | img_url: '710x' }} 710w,{%- endif -%}
                  {%- if block.settings.image1.width >= 1420 -%}{{ block.settings.image1 | img_url: '1420x' }} 1420w,{%- endif -%}
                  {{ block.settings.image1 | img_url: 'master' }} {{ block.settings.image1.width }}w"
                src="{{ block.settings.image1 | img_url: '550x' }}"
                sizes="(min-width: 990px) {% if section.blocks.size <= 2 %}710px{% else %}550px{% endif %},
                  (min-width: 750px) {% if section.blocks.size == 1 %}710px{% else %}550px{% endif %},
                  calc(100vw - 30px)"
                alt="{{ block.settings.image1.alt }}"
                height="{{ block.settings.image1.height }}"
                width="{{ block.settings.image1.width }}"
                loading="lazy"
              >

              {% if block.settings.title1 != blank %}
                <span class="title"> {{ block.settings.title1 }} </span>
              {% endif %}
          </div>
          <div class="product_content" style="width: {{block.settings.width3}}; background: {{block.settings.background3}};">
              <div class="product_content-image">
                <img
                  srcset="{%- if block.settings.product_image.width >= 275 -%}{{ block.settings.product_image | img_url: '275x' }} 275w,{%- endif -%}
                    {%- if block.settings.product_image.width >= 550 -%}{{ block.settings.product_image | img_url: '550x' }} 550w,{%- endif -%}
                    {%- if block.settings.product_image.width >= 710 -%}{{ block.settings.product_image | img_url: '710x' }} 710w,{%- endif -%}
                    {%- if block.settings.product_image.width >= 1420 -%}{{ block.settings.product_image | img_url: '1420x' }} 1420w,{%- endif -%}
                    {{ block.settings.product_image | img_url: 'master' }} {{ block.settings.product_image.width }}w"
                  src="{{ block.settings.product_image | img_url: '550x' }}"
                  sizes="(min-width: 990px) {% if section.blocks.size <= 2 %}710px{% else %}550px{% endif %},
                    (min-width: 750px) {% if section.blocks.size == 1 %}710px{% else %}550px{% endif %},
                    calc(100vw - 30px)"
                  alt="{{ block.settings.product_image.alt }}"
                  height="{{ block.settings.product_image.height }}"
                  width="{{ block.settings.product_image.width }}"
                  loading="lazy"
                >
              </div>

              <div class="product_content-info" style="color: {{block.settings.text_color3}};">
                {% if block.settings.title3 != blank %}
                  <span class="title"> {{ block.settings.title3 }} </span>
                {% endif %}

                {% if block.settings.text3 != blank %}
                  <div class="text"> {{ block.settings.text3 }} </div>
                {% endif %}

                {% if block.settings.button_text3 != blank %}
                  <a href="{{block.settings.button_url3}}" class="button button-shop">{{block.settings.button_text3}}</a>
                {% endif %}
              </div>
          </div>
          <div class="image2" style="width: {{block.settings.width2}};">
             <img
                srcset="{%- if block.settings.image2.width >= 275 -%}{{ block.settings.image2 | img_url: '275x' }} 275w,{%- endif -%}
                  {%- if block.settings.image2.width >= 550 -%}{{ block.settings.image2 | img_url: '550x' }} 550w,{%- endif -%}
                  {%- if block.settings.image2.width >= 710 -%}{{ block.settings.image2 | img_url: '710x' }} 710w,{%- endif -%}
                  {%- if block.settings.image2.width >= 1420 -%}{{ block.settings.image2 | img_url: '1420x' }} 1420w,{%- endif -%}
                  {{ block.settings.image2 | img_url: 'master' }} {{ block.settings.image2.width }}w"
                src="{{ block.settings.image2 | img_url: '550x' }}"
                sizes="(min-width: 990px) {% if section.blocks.size <= 2 %}710px{% else %}550px{% endif %},
                  (min-width: 750px) {% if section.blocks.size == 1 %}710px{% else %}550px{% endif %},
                  calc(100vw - 30px)"
                alt="{{ block.settings.image2.alt }}"
                height="{{ block.settings.image2.height }}"
                width="{{ block.settings.image2.width }}"
                loading="lazy"
              >

              {% if block.settings.title2 != blank %}
                <span class="title"> {{ block.settings.title2 }} </span>
              {% endif %}
          </div>
        {% elsif block.type == 'column2' %}
          <div class="image1" style="width: {{block.settings.width1}};">
             <img
                srcset="{%- if block.settings.image1.width >= 275 -%}{{ block.settings.image1 | img_url: '275x' }} 275w,{%- endif -%}
                  {%- if block.settings.image1.width >= 550 -%}{{ block.settings.image1 | img_url: '550x' }} 550w,{%- endif -%}
                  {%- if block.settings.image1.width >= 710 -%}{{ block.settings.image1 | img_url: '710x' }} 710w,{%- endif -%}
                  {%- if block.settings.image1.width >= 1420 -%}{{ block.settings.image1 | img_url: '1420x' }} 1420w,{%- endif -%}
                  {{ block.settings.image1 | img_url: 'master' }} {{ block.settings.image1.width }}w"
                src="{{ block.settings.image1 | img_url: '550x' }}"
                sizes="(min-width: 990px) {% if section.blocks.size <= 2 %}710px{% else %}550px{% endif %},
                  (min-width: 750px) {% if section.blocks.size == 1 %}710px{% else %}550px{% endif %},
                  calc(100vw - 30px)"
                alt="{{ block.settings.image1.alt }}"
                height="{{ block.settings.image1.height }}"
                width="{{ block.settings.image1.width }}"
                loading="lazy"
              >
          </div>

          <div class="product_content" style="width: {{block.settings.width2}}; background: {{block.settings.background}};">
              <div class="product_content-info" style="color: {{block.settings.text_color}};">
                {% if block.settings.title != blank %}
                  <span class="title"> {{ block.settings.title }} </span>
                {% endif %}

                {% if block.settings.text != blank %}
                  <div class="text"> {{ block.settings.text }} </div>
                {% endif %}

                {% if block.settings.button_text != blank %}
                  <a href="{{block.settings.button_url}}" class="button button-shop">{{block.settings.button_text}}</a>
                {% endif %}
              </div>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>

  {% unless section.settings.button_label == blank %}
  <div class="button-wrapper">
    <a href="{{section.settings.button_link}}" class="button button-shopall"> {{section.settings.button_label}} </a>
  </div>
  {% endunless %}

{% unless section.settings.full_width %}
</div>
{% endunless %}

