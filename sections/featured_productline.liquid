          "label": "Button Text"
        },
        {
          "type": "color",
          "id": "background3",
          "label": "Background"
        },
        {
          "type": "color",
          "id": "text_color3",
          "label": "Text Color"
        },
        {
          "type": "text",
          "id": "width3",
          "label": "Width 3"
        }
      ]
    },
    {
      "type": "column2",
      "name": "Image - Content",
      "settings": [
        {
          "type": "image_picker",
          "id": "image1",
          "label": "Image 1"
        },
        {
          "type": "text",
          "id": "width1",
          "label": "Width 1"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "color",
